<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    android:background="#80DEEA"
    tools:context="com.fitstsputnik.myappportfolio.MainActivity">

    <TextView
        android:id="@+id/portfolio_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_apps_portfolio_title"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/button_spotify_streamer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/portfolio_title"
        android:layout_centerInParent="true"
        android:text="@string/spotify_streamer"
        android:layout_marginBottom="16dp"
        android:background="#F08C35"
        />
    <Button
        android:id="@+id/button_scores_app"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_spotify_streamer"
        android:layout_centerInParent="true"
        android:text="@string/scores_app"
        android:layout_marginBottom="16dp"
        android:background="#F08C35"
        />
    <Button
        android:id="@+id/button_library_app"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_scores_app"
        android:layout_centerInParent="true"
        android:text="@string/library_app"
        android:layout_marginBottom="16dp"
        android:background="#F08C35"
        />
    <Button
        android:id="@+id/button_build_it_bigger_app"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_library_app"
        android:layout_centerInParent="true"
        android:text="@string/build_it_bigger_app"
        android:layout_marginBottom="16dp"
        android:background="#F08C35"
        />
    <Button
        android:id="@+id/button_xyz_reader_app"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_build_it_bigger_app"
        android:layout_centerInParent="true"
        android:text="@string/xyz_reader_app"
        android:layout_marginBottom="16dp"
        android:background="#F08C35"
        />
    <Button
        android:id="@+id/button_capstone_app"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_xyz_reader_app"
        android:layout_centerInParent="true"
        android:text="@string/capstone_app"
        android:textColor="#FFFFFF"
        android:background="#FF1744"
        />
</RelativeLayout>
